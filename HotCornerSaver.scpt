property hotCornerSettings : {}to disableHotCorners()	set hotCorners to {}	tell application "System Events"		tell «class epas»			set end of hotCorners to a reference to «class epbl»			set end of hotCorners to a reference to «class eptl»			set end of hotCorners to a reference to «class eptr»			set end of hotCorners to a reference to «class epbr»			repeat with hotCorner in hotCorners				set hotCornerProps to properties of hotCorner				set end of hotCornerSettings to {hotCorner, {«class epsa»:«class epsa» of hotCornerProps, «class epso»:«class epso» of hotCornerProps}}				set properties of hotCorner to {«class epsa»:«constant epacnone», «class epso»:{}}			end repeat		end tell	end tellend disableHotCornersto restoreHotCorners()	tell application "System Events"		tell «class epas»			repeat with settings in hotCornerSettings				set properties of item 1 of settings to item 2 of settings			end repeat		end tell	end tellend restoreHotCornersif hotCornerSettings is not missing value then	set result to display dialog "Hot corner settings..." buttons {"Disable", "Cancel", "Restore"} default button 3else	set result to display dialog "Hot corner settings..." buttons {"Disable"} default button 1end ifif (button returned of result) is "Disable" then	disableHotCorners()else if (button returned of result) is "Restore" then	restoreHotCorners()end if